.mask{
  display: flex;
  align-items: center;
  justify-items: center;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  background: rgba(0, 0, 0, 0.5);
}
.mask .dialog{
  position: relative;
  background: #fff;
  border-radius: 10rpx;
  width: 670rpx;
  margin: 20rpx;
  padding: 20rpx;
}
.mask .close{
  text-align: right;
  font-size: 40rpx;
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}